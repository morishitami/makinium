<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">会員番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :code, class:"input-default", maxlength:"4", placeholder:"半角数字3桁", autofocus: true %>
  </div>

  <div class="field">
    <div class='form-text-wrap'>
    <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="field">
    <div class='form-text-wrap'>
    <label class="form-text">パスワード再確認</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
